<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kalkulator.MainActivity">

    <Button
        android:text="6"
        android:id="@+id/button6"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="-"
        android:id="@+id/bMinus"
        android:layout_above="@+id/bPodziel"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:onClick="clickOperator"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="1"
        android:layout_marginTop="36dp"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="kliknijNumer"
        android:layout_height="wrap_content"
        android:layout_width="70dp" />

    <Button
        android:text="0"
        android:id="@+id/bZero"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="x"
        android:id="@+id/bPomnoz"
        android:layout_alignBaseline="@+id/bKasuj"
        android:layout_alignBottom="@+id/bKasuj"
        android:layout_toRightOf="@+id/bKasuj"
        android:layout_toEndOf="@+id/bKasuj"
        android:onClick="clickOperator"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="."
        android:id="@+id/bKropka"
        android:layout_alignBaseline="@+id/bZero"
        android:layout_alignBottom="@+id/bZero"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:onClick="dotClick"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="History"
        android:id="@+id/bHistoria"
        android:layout_below="@+id/bWynik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bPomnoz"
        android:layout_alignEnd="@+id/bPomnoz" />

    <Button
        android:text="C"
        android:id="@+id/bKasuj"
        android:onClick="clickClear"
        android:layout_below="@+id/bPodziel"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="TextView"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="2"
        android:id="@+id/button2"
        android:onClick="clickNumber"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:text="4"
        android:id="@+id/button4"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="3"
        android:id="@+id/button3"
        android:onClick="clickNumber"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:text="="
        android:id="@+id/bWynik"
        android:onClick="clickEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bKropka"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="1"
        android:id="@+id/button13"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickNumber" />

    <Button
        android:text="/"
        android:id="@+id/bPodziel"
        android:onClick="clickOperator"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:text="+"
        android:id="@+id/bPlus"
        android:onClick="clickOperator"
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:text="8"
        android:id="@+id/button8"
        android:onClick="clickNumber"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

</RelativeLayout>
